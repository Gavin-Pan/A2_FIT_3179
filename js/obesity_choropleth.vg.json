{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "width": 960,
  "height": 520,
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "#f3f7fb" }
    },
    {
      "data": { "graticule": { "step": [30, 30] } },
      "mark": { "type": "geoshape", "stroke": "#d1d5dd", "strokeWidth": 0.5 }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.ADM0_A3",
          "from": {
            "data": { "url": "data/Obesity_Country_Rates.csv" },
            "key": "cca3",
            "fields": ["obesityRatesByCountry_obesityRate", "country"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.5 },
      "encoding": {
        "color": {
          "field": "obesityRatesByCountry_obesityRate",
          "type": "quantitative",
          "title": "Obesity rate (%)",
          "scale": {
            "type": "threshold",
            "domain": [15, 30, 45, 60],
            "range": ["#f7e6d7", "#d9b38c", "#b07d57", "#8c510a", "#5a2e0c"],
            "unknown": "#EEEEEE"
          },
          "legend": { "orient": "right", "title": "Obesity rate (%)" }
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          {
            "field": "obesityRatesByCountry_obesityRate",
            "type": "quantitative",
            "title": "Obesity rate (%)",
            "format": ".1f"
          }
        ]
      }
    }
  ],
  "config": {
    "background": "white",
    "view": { "stroke": "transparent" }
  }
}
