{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top/Bottom 30 countries by obesity rate (aggregated per country) with legend filtering.",
  "width": 500,
  "height": 400,
  "data": { "url": "data/physical_activity_with_obesity.csv" },
  "background": "transparent",
  "config": { "view": { "stroke": null } },

  "transform": [
    {
      "filter": "isValid(datum.FactValueNumeric) && isValid(datum.Obesity_Rate)"
    },

    {
      "aggregate": [
        { "op": "mean", "field": "FactValueNumeric", "as": "avgPA" },
        { "op": "mean", "field": "Obesity_Rate", "as": "avgOb" }
      ],
      "groupby": ["country"]
    },

    {
      "window": [{ "op": "rank", "as": "rank_desc" }],
      "sort": [{ "field": "avgOb", "order": "descending" }]
    },
    {
      "window": [{ "op": "rank", "as": "rank_asc" }],
      "sort": [{ "field": "avgOb", "order": "ascending" }]
    },

    { "filter": "datum.rank_desc <= 10 || datum.rank_asc <= 10" },

    {
      "calculate": "datum.rank_desc <= 10 ? 'Worst 10 obese countries' : 'Best 10 obese countries'",
      "as": "Group"
    }
  ],

  "layer": [
    {
      "params": [
        {
          "name": "group_select",
          "select": { "type": "point", "fields": ["Group"] },
          "bind": "legend"
        }
      ],
      "transform": [{ "filter": { "param": "group_select" } }],

      "mark": {
        "type": "point",
        "filled": true,
        "size": 200,
        "opacity": 0.5,
        "stroke": "#000000",
        "strokeWidth": 0.7
      },
      "encoding": {
        "x": {
          "field": "avgPA",
          "type": "quantitative",
          "title": "Prevalence of sufficient physical activity (%)",
          "axis": { "grid": false },
          "format": ".1f"
        },
        "y": {
          "field": "avgOb",
          "type": "quantitative",
          "title": "Obesity Rate (%)",
          "axis": { "grid": false }
        },
        "color": {
          "field": "Group",
          "type": "nominal",
          "title": null,
          "legend": {
            "labelFontSize": 12,
            "titleFontSize": 12
          },
          "scale": {
            "domain": ["Worst 10 obese countries", "Best 10 obese countries"],
            "range": ["#d8b4fe", "#f2994a"]
          }
        },
        "tooltip": [
          { "field": "country", "type": "nominal", "title": "Country" },
          {
            "field": "avgPA",
            "type": "quantitative",
            "format": ".1f",
            "title": "Avg physical activity (%)"
          },
          {
            "field": "avgOb",
            "type": "quantitative",
            "format": ".2f",
            "title": "Avg obesity rate (%)"
          },

          { "field": "Group", "type": "nominal" }
        ]
      }
    },

    {
      "transform": [
        {
          "aggregate": [{ "op": "median", "field": "avgPA", "as": "medianPA" }]
        }
      ],
      "mark": {
        "type": "rule",
        "strokeDash": [4, 4],
        "strokeWidth": 2,
        "color": "#666"
      },
      "encoding": { "x": { "field": "medianPA", "type": "quantitative" } }
    },
    {
      "transform": [
        {
          "aggregate": [{ "op": "median", "field": "avgOb", "as": "medianOb" }]
        }
      ],
      "mark": {
        "type": "rule",
        "strokeDash": [4, 4],
        "strokeWidth": 2,
        "color": "#666"
      },
      "encoding": { "y": { "field": "medianOb", "type": "quantitative" } }
    }
  ],

  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" },
    "axis": { "labelFontSize": 12, "titleFontSize": 12, "grid": false },
    "legend": { "labelLimit": 400 }
  }
}
